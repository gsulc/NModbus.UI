<Window x:Class="NModbus.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NModbus.UI"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="NModbus Master" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="255" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <ContentControl Grid.Column="0" Margin="5" prism:RegionManager.RegionName="ConnectionRegion" />
        <ContentControl Grid.Column="1" Margin="5" prism:RegionManager.RegionName="ModbusInteractionRegion" />
    </Grid>
</Window>
